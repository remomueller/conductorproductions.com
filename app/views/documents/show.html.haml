- @title = @document.name

- content_for :container_class, "container-fluid"
- content_for :sidebar, render("projects/sidebar")

- content_for :header do
  - if @project.editable_by?(current_user)
    .float-right
      = render "layouts/edit_delete_dropdown_header", edit_url: edit_project_document_path(@project, @document), delete_url: [@project, @document], delete_confirmation: "Delete #{@document.name}?"
  = link_to @project.name, @project
  |
  = link_to "Documents", project_documents_path(@project)
  |
  = @title

.dashboard-container
  %dl.dl-horizontal
    %dt
      %strong Category
    %dd= link_to @document.category.name, [@project, @document.category] if @document.category

    %dt
      %strong Creator
    %dd= @document.user.name if @document.user

    %dt
      %strong Primary Document
    %dd
      = @document.name
      - if @document.primary_document.size > 0
        = link_to 'Download', download_primary_project_document_path(@project, @document), class: 'btn btn-sm btn-light'

    %dt
      %strong File Size
    %dd= number_to_human_size @document.primary_document.size

    - if @document.document.present?
      %dt
        %strong Document
      %dd
        = @document.name_secondary
        - if @document.document.size > 0
          = link_to 'Download', download_project_document_path(@project, @document), class: 'btn btn-sm btn-light'

      %dt
        %strong File Size
      %dd= number_to_human_size @document.document.size

    %dt
      %strong Uploaded At
    %dd= @document.document_uploaded_at.strftime("%b %-d, %Y at %-I:%M %p") if @document.document_uploaded_at

    %dt
      %strong Archived
    %dd= @document.archived
