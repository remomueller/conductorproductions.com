- @title = "Sign up"

.page-box.last-box.brand
  .container
    .mx-auto{ style: "max-width: 400px;" }
      %h1.small-caps= @title

      = form_with model: resource, as: resource_name, url: registration_path(resource_name), local: true do |form|
        .form-group
          = form.label :first_name, nil, class: "form-control-label"
          = form.text_field :first_name, autofocus: true, autocomplete: "off", class: "form-control"

        .form-group
          = form.label :last_name, nil, class: "form-control-label"
          = form.text_field :last_name, autocomplete: "off", class: "form-control"

        .form-group
          = form.label :email, nil, class: "form-control-label"
          = form.email_field :email, autocomplete: "off", class: "form-control"

        .form-group
          = form.label :password, nil, class: "form-control-label"
          = form.password_field :password, autocomplete: "off", class: "form-control"
          %span.text-muted
            = @minimum_password_length
            characters minimum

        .form-group
          = form.label :password_confirmation, nil, class: "form-control-label"
          = form.password_field :password_confirmation, autocomplete: "off", class: "form-control"

        .form-group.mt-4
          = form.submit "Sign up", class: "btn btn-dark small-caps"
