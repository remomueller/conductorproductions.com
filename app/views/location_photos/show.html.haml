%h1
  = link_to @project.name, @project
  |
  = link_to 'Locations', project_locations_path(@project)
  |
  = link_to @location.name, [@project, @location]

- if @project.editable_by?(current_user)
  =# link_to 'Edit Location', edit_project_location_path(@project, @location), class: 'btn btn-xs btn-default'
  = link_to 'Delete Location Photo', [@project, @location, @location_photo], method: :delete, class: 'btn btn-xs btn-danger', data: { confirm: "Are you sure you want to delete location photo?" }

= image_tag( download_project_location_location_photo_path(@project, @location, @location_photo), class: 'img-responsive' )
