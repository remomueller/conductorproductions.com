<!doctype html>
<!--[if lt IE 7]>      <html class="no-js lt-ie9 lt-ie8 lt-ie7"> <![endif]-->
<!--[if IE 7]>         <html class="no-js lt-ie9 lt-ie8"> <![endif]-->
<!--[if IE 8]>         <html class="no-js lt-ie9"> <![endif]-->
<!--[if gt IE 8]><!-->
<html class="no-js">
<!--<![endif]-->

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Conductor Productions</title>
    <meta name="description" content="Video Production Company Located in Downtown Boston" />
    <meta name="viewport" content="width=device-width" />
    <!-- Place favicon.ico and apple-touch-icon.png in the root directory -->
    <!-- build:css(.tmp) styles/main.css -->
    <%= stylesheet_link_tag 'screen', media: 'all', data: { turbolinks_track: 'reload' } %>
    <!-- endbuild -->
</head>

<body>

    <!-- Sticky Header -->
    <header class="header" id="stickyHeader">
        <section class="header-inner inner-wrapper">
            <a href="/" class="logo-container left" title="Conductor Productions">
                <%= image_tag 'pc/conductor-logo.svg', alt: 'Conductor Productions' %>
            </a>
            <div class="menu-icon menu-trigger">
                <small>menu</small>
                <span class="top"></span>
                <span class="mid"></span>
                <span class="bottom"></span>
            </div>
        </section>
    </header><!-- / End Sticky Header -->

    <nav class="nav-container">
        <div class="inner">
            <div class="nav-close" id="menuClose">&times;</div>
            <ul>
                <li><%= link_to 'Our Work', pc_our_work_path, title: 'Our Work' %></li>
                <li class="directors">
                    <span class="block directors-toggle" title="Directors">Directors</span>
                    <ul class="dropdown-nav">
                        <li class="dropdown-item">
                            <%= link_to 'Noah Lydiard', pc_director_noah_lydiard_path, title: 'Noah Lydiard' %>
                        </li>
                        <li class="dropdown-item">
                            <%= link_to 'Kamell Allaway', pc_director_kamell_allaway_path, title: 'Kamell Allaway' %>
                        </li>
                        <li class="dropdown-item">
                            <%= link_to 'Vladimir Minuty', pc_director_vladimir_minuty_path, title: 'Vladimir Minuty' %>
                        </li>
                        <li class="dropdown-item">
                            <%= link_to 'Christian Williams', pc_director_christian_williams_path, title: 'Christian Williams' %>
                        </li>
                    </ul>
                </li><!-- / end directors -->
                <li><%= link_to 'Clients', pc_clients_path, title: 'Clients' %></li>
                <li><%= link_to 'Contact', pc_contact_path, title: 'Contact' %></li>
                <li><%= link_to 'Client Portal', client_login_path, title: 'Client Portal' %></li>
            </ul>
        </div><!-- / end inner nav -->
    </nav><!-- / end navigation -->

    <main class="outer-wrapper bounds home">
        <div class="welcome no-border inner-page pull title-header outer-wrapper">
            <div class="left">
                <h1>
                    <b class="first">Conductor.</b>
                    <i class="page-name">Content that works.</i>
                </h1>
            </div>
            <!-- end left track -->
            <svg width="199px" height="178px" class="arrow-design right" viewBox="0 0 179 158">
                <g stroke="none" stroke-width="1" fill="none">
                    <g transform="translate(-1261.000000, -2.000000)" fill-opacity="1" fill="#000">
                        <g transform="translate(-38.000000, 2.000000)">
                            <path d="M1299,0 L2345.20949,0 L2422,79 L2345.20949,158 L1330.30314,158 L1299,0 Z" transform="translate(1860.500000, 79.000000) scale(-1, 1) translate(-1860.500000, -79.000000) "></path>
                        </g>
                    </g>
                </g>
            </svg>
            <div class="menu-icon right menu-trigger">
                <small>menu</small>
                <span class="top"></span>
                <span class="mid"></span>
                <span class="bottom"></span>
            </div>
            <!-- / end menu icon -->
        </div>
        <!-- / end welcome -->
        <section class="hero video-player">
            <span class="play-btn" title="Play">
                <span class="play"></span>
            </span><!-- / end play button -->
            <div class="hero-carousel" id="heroCarousel">
                <div class="item">
                    <div class="hero-callout hero-callout">
                        <h2>
                            We build
                            <span>commercials</span> and
                            <span>digital content</span>
                        </h2>
                        <%= link_to 'Learn More', pc_our_work_path, title: 'What We Do', data: { role: 'button' }, class: 'button right' %>
                    </div><!-- / end hero callout -->
                </div><!-- / end item -->
                <div class="item">
                    <div class="hero-callout">
                        <h2>
                            Crazy about <span>creative</span>, obsessed with
                            <span>production value</span>
                        </h2>
                        <%= link_to 'Learn More', pc_our_work_path, title: 'What We Do', data: { role: 'button' }, class: 'button right' %>
                    </div><!-- / end hero callout -->
                </div><!-- / end item -->
                <div class="item" class="video-outer">
                    <div class="hero-callout">
                        <h2>
                            <span>Discounts</span>
                            for any creative requiring pyrotechnics
                        </h2>
                        <%= link_to 'Learn More', pc_our_work_path, title: 'What We Do', data: { role: 'button' }, class: 'button right' %>
                    </div><!-- / end hero callout -->
                </div><!-- / end item -->
            </div><!-- / end carousel container -->
            <div class="hero-inner video-inner">
                <div class="video-container">
                    <video id="standalonePlayer" preload="true" class="video" src="https://player.vimeo.com/external/200017964.hd.mp4?s=9792d3c55bb64ff685fd85e8bb5df288ddbc5a76&profile_id=119" poster="<%= asset_path 'pc/posters/netflix.png' %>">
                    </video>
                </div><!-- / end video container -->
            </div><!-- / end hero inner -->
            <div class="video-controls disabled" id="videoControls">
                <!-- / end slide list -->
                <ul class="controls right">
                    <li>
                        <a href="#" id="restart" title="Restart" class="icon icon-restart"></a>
                    </li>
                    <li>
                        <a href="#" id="pause" title="Play/Pause" class="icon icon-pause"></a>
                    </li>
                    <li>
                        <a href="#" id="volume" title="Volume"  class="icon icon-sound"></a>
                    </li>
                </ul>
                <!-- / end video controls -->
            </div>
            <!-- / end hero controls -->
        </section>
        <!-- / end hero -->
        <section class="middle see-more-work">
            <div class="container">
                <p>
                    We’re Conductor. We are a company of creators, directors, and producers... and we’re here for you. Our services include creative development, writing, full-service production, and full-service post production. Our mission is to help you sell through beautiful images, carefully chosen words, and intelligent strategy. Contact us. Let us show you our secrets, who we are, how hard we work and how wide our reach is. You’ll be happy you did.
                </p>
            </div>
            <div class="callouts">
                <div class="item">
                    <a href="/login" class="button" data-role="button">Client Portal</a>
                </div><!-- / end callout -->
                <div class="scroll-callout item">
                    <%= image_tag 'pc/arrow-down-callout.svg', alt: 'Backdrop', class: 'backdrop' %>
                    <div class="content">
                        <span>For a good time</span>
                        <span>Press here</span>
                        <%= link_to pc_our_work_path, class: 'arrow' do %>
                            <span class="icon icon-down-arrow"></span>
                        <% end %>
                    </div><!-- / end panel -->
                </div><!-- / end scroll callout -->
                <div class="item">
                    <%= link_to 'Contact Frank', pc_contact_path, class: 'button', data: { role: 'button' } %>
                </div>
            </div><!-- / end callouts -->
            <div class="background-gradient"></div><!-- / end background gradient -->
        </section>
        <!-- / end middle see more work section -->
    </main>
    <!-- / end outer wrapper bound -->
    <footer class="outer-wrapper">
        <section class="footer-inner inner-wrapper">
            <div class="company-info">
                <h3 class="site-title">Conductor Productions</h3>
                <span>142 Berkeley St, Boston, MA<b>|</b>
                <a href="tel:6172621400" title="Call Now">(617) 262-1400 </a>
                </span>
                <span class="copyright">
                    © 2016 Conductor Productions
                </span>
            </div>
            <!-- / end left contact and company info -->
            <aside class="footer-nav">
                <ul class="social-media">
                    <li class="facebook">
                        <a href="https://www.facebook.com/ConductorCreative" target="_blank" title="Facebook">
                            <span class="icon icon-facebook"></span>
                        </a>
                    </li>
                    <li class="instagram">
                        <a href="#" target="_blank" title="Instagram">
                            <span class="icon icon-instagram"></span>
                        </a>
                    </li>
                    <li class="linked-in">
                        <a href="http://www.linkedin.com/pub/noah-lydiard/3/b5b/749" target="_blank" title="Linked In">
                            <span class="icon icon-linked-in"></span>
                        </a>
                    </li>
                </ul><!-- / end social media -->
                <ul class="menu">
                    <li>
                        <%= link_to 'Our Work', pc_our_work_path, title: 'Our Work' %>
                    </li>
                    <li>
                        <%= link_to 'Directors', pc_director_noah_lydiard_path, title: 'Directors' %>
                    </li>
                    <li>
                        <%= link_to 'Clients', pc_clients_path, title: 'Clients' %>
                    </li>
                    <li>
                        <%= link_to 'Contact', pc_contact_path, title: 'Contact' %>
                    </li>
                    <li>
                        <%= link_to 'Login', client_login_path, title: 'Login' %>
                    </li>
                </ul><!-- / end menu -->
            </aside>
            <!-- / end footer nav -->
        </section>
        <!-- / end footer inner -->
    </footer>
    <!-- / end footer -->
