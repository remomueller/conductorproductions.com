= render "external/landing_menu", text: "Background video with work grid below video."

%video.video-full-page-16x9{ autoplay: "true", loop: "true", muted: "true", plays_inline: "true" }
  %source{ src: "https://player.vimeo.com/external/239169746.hd.mp4?s=2ce411d31754af0c66b9543f0560190b8333b796&profile_id=174", type: "video/mp4" }

.page-box.page-box-no-padding.text-light.background-black-animated.d-flex.flex-column.justify-content-between
  .container-fluid
  .container-fluid.text-center
    %h1.brand-bold.landing-title.animated-fade-out-title
      - ENV["website_name"].upcase.split("").each_with_index do |letter, index|
        %span.animated-letter{ class: "animation-delay-#{index * 50}" }>= letter
  .container-fluid.background-black-semi-transparent.p-3
    .landing-subtitle.animated-fade-in-title
      .float-right
        = link_to team_path, style: "color: #fff;" do
          %i.fa.fa-lock
      .brand-bold= "CONDUCTOR".upcase


= render "external/work_grid"
