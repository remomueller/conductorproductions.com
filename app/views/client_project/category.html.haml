%h2
  = link_to @project.name, client_project_root_path(@project), class: 'project-link'

  %br
  %small{ style: 'color:white' }
    = @category.name
  - if @document
    .pull-right
      = link_to client_project_download_document_path(@project, @document), class: 'btn btn-xs btn-default' do
        %span.glyphicon.glyphicon-download
        %span.hidden-xs= @document.name

- if @locations
  - @locations.in_groups_of(3, false).each do |location_group|
    .row
      - location_group.each do |location|
        .col-sm-4
          %h4
            = link_to location.name, client_project_location_path(@project, location.category.top_level.downcase, location.category, location)
            %small= pluralize location.location_photos.count, 'photo'
          - location.location_photos.each do |location_photo|
            = link_to client_project_location_photo_path(@project, location.category.top_level.downcase, location.category, location, location_photo) do
              = image_tag( client_project_download_location_photo_path(@project, location_photo, size: 'thumb'), style: 'margin-bottom:5px;margin-right:5px', class: 'white-background' )

- if @document
  - if @document.pdf?
    .embed-responsive{ style: 'padding-bottom: 106.25%;' }
      %object.white-background{ data: client_project_download_document_path(@project, @document, inline: '1'), type: 'application/pdf' }
        alt :
        = link_to @document.name, client_project_download_document_path(@project, @document), class: 'btn btn-xs btn-default'
  - elsif @document.image?
    .center
      = image_tag client_project_download_document_path(@project, @document, inline: '1'), class: 'white-background img-thumbnail'
  - else
    = link_to client_project_download_document_path(@project, @document), class: 'btn btn-default' do
      %span.glyphicon.glyphicon-download
      Download
      = @document.name
- if @embed
  .embed-responsive.embed-responsive-16by9
    %iframe{ src: @embed.embed_url }
