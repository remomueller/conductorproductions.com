- @locations.each do |location|
  .location-container
    %h2= link_to location.name, client_project_location_path(@project, location.category.top_level.downcase, location.category, location)
    = simple_format location.address
    - location.location_photos.each do |location_photo|
      %div{ style: 'display:inline-block;margin-right:20px;margin-bottom:20px' }
        = link_to client_project_location_photo_path(@project, location.category.top_level.downcase, location.category, location, location_photo), style: 'cursor: pointer' do
          = image_tag( client_project_download_location_photo_path(@project, location_photo, size: 'thumb'), class: 'img-responsive white-background' )
