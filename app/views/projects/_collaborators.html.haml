%table.table.table-fixed
  %thead
    %tr
      %th Name
      %th Role
      %th Invited By
      %th Actions
  %tr
    %td= link_to_if current_user.system_admin?, @project.user.name, @project.user
    %td Project Owner
    %td
    %td
  - @project.project_users.order(editor: :desc, id: :asc).each do |project_user|
    - member = project_user
    %tr{ class: "#{'success' if @member == member}" }
      - if member.user
        %td= link_to_if current_user.system_admin?, member.user.name, member.user
      - else
        %td
          %span.text-muted= member.invite_email

      %td
        Project
        = member.editor? ? 'Editor' : 'Viewer'

      %td.text-muted
        - if member.creator
          = link_to_if current_user.system_admin?, member.creator.name, member.creator

      %td
        = link_to 'Remove', member, method: :delete, remote: true, class: 'btn btn-xs btn-danger', data: { confirm: "Are you sure you want to remove #{member.user ? member.user.name : member.invite_email}?" } if @project.editable_by?(current_user) or (current_user.all_viewable_projects.include?(@project) and current_user == member.user)
        = link_to 'Resend Invitation', resend_project_user_path(member), method: :post, remote: true, class: 'btn btn-primary btn-xs', autocomplete: "off", data: { loading_text: "Resent" } if @project.editable_by?(current_user) and not member.user
    - if not member.user and current_user == member.creator
      %tr
        %td{ colspan: '4' }
          = text_field_tag "member_invite", "#{ENV['website_url']}/invite/#{member.invite_token}", class: 'form-control'
