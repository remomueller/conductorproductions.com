%h1
  = link_to 'Users', users_path
  |
  = @user.name

= link_to 'Edit User', edit_user_path(@user), class: 'btn btn-xs btn-default'

%dl.dl-horizontal
  %dt
    %strong Name
  %dd
    = @user.name

  %dt
    %strong Email
  %dd
    = @user.email

  %dt
    %strong System Admin
  %dd
    = @user.system_admin?

