- @title = "Users"

- content_for :container_class, "container-fluid"
- content_for :sidebar, render("internal/sidebar")

- content_for :header, @title

.dashboard-container
  %table.table.table-striped.table-borderless
    %thead
      %tr
        %th Name
        %th Admin
        %th.text-center Actions

    %tbody
      - @users.each do |user|
        %tr
          %td= link_to user.name, user
          %td= simple_check user.system_admin?
          %td.text-center= render "layouts/edit_delete_dropdown_header", edit_url: edit_user_path(user), delete_url: user, delete_confirmation: "Delete #{user.name}?"
