%header.navbar.navbar-expand.flex-column.flex-row.sticky-top.navbar-conductor{ class: @menu_transparent != false ? "navbar-conductor-transparent" : nil }
  %a.navbar-brand.mr-0.mr-md-2{ href: root_path, aria: { label: "Conductor" } }
    .d-block
      = image_tag "conductor-productions-logo.png", size: "36x36", style: "border: 1px solid #000;border-radius: .125rem;"

  .navbar-nav-scroll
    %ul.navbar-nav.bd-navbar-nav.flex-row
      %li.nav-item= link_to "Home", root_path, class: "nav-link"
      %li.nav-item= link_to "Services", services_path, class: "nav-link"
      %li.nav-item= link_to "Work", work_path, class: "nav-link"
      %li.nav-item= link_to "Creators", creators_path, class: "nav-link"
      %li.nav-item= link_to "Art", art_path, class: "nav-link"
      %li.nav-item= link_to "Contact", contact_path, class: "nav-link"
      %li.nav-item.nowrap
        = link_to client_login_path, class: "nav-link" do
          %i.fa.fa-lock
          Login
