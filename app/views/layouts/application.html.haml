!!!
%html
  %head
    %meta{ charset: 'utf-8'}
    %meta{ content: 'IE=Edge,chrome=1', http: { equiv: 'X-UA-Compatible' } }
    %meta{ name: 'viewport', content: 'width=device-width, initial-scale=1.0' }
    %meta{ itemprop: 'name', content: 'Conductor Productions' }
    %meta{ itemprop: 'description', content: 'Boston based video production company' }
    %meta{ name: 'description', content: 'Boston based video production company' }
    -# Don't cache any pages
    %meta{ name: 'turbolinks-cache-control', content: 'no-cache' }
    %title= [@title, ENV['website_name']].compact.join(' - ').html_safe

    = favicon_link_tag
    = csrf_meta_tags

    / HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries
    /[if lt IE 9]
      %script{ src: "//oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js" }
      %script{ src: "//oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js" }

    %script{ src: '//f.vimeocdn.com/js/froogaloop2.min.js', data: { turbolinks_track: 'reload' } }

    = stylesheet_link_tag "#{@invert ? 'application-invert' : 'application'}", media: 'all', data: { turbolinks_track: 'reload' }
    = javascript_include_tag 'application', data: { turbolinks_track: 'reload' }
    = javascript_tag "var root_url='#{request.script_name + '/'}';var auth_token='#{form_authenticity_token}';"
  %body
    - if params[:controller] == 'client_project'
      = render 'client_project/header'
    - elsif params[:controller] == 'client_session'
      = render 'client_session/header'
    - else
      = render 'welcome/header'

    = render 'layouts/flash_messages'
    %div{ class: (params[:controller] == 'client_project' && %w(root menu).include?(params[:action]) ? 'container-fluid' : 'container') }
      = yield

    = render 'welcome/footer'
