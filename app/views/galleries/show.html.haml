- @title = @gallery.name

- content_for :container_class, "container-fluid"
- content_for :sidebar, render("projects/sidebar")

- content_for :header do
  - if @project.editable_by?(current_user)
    .float-right
      = render "layouts/edit_delete_dropdown_header", edit_url: edit_project_gallery_path(@project, @gallery), delete_url: [@project, @gallery], delete_confirmation: "Delete #{@gallery.name}?"
  = link_to @project.name, @project
  |
  = link_to "Galleries", project_galleries_path(@project)
  |
  = @title

.dashboard-container
  %dl.dl-horizontal
    %dt
      %strong Category
    %dd= link_to @gallery.category.name, [@project, @gallery.category] if @gallery.category

    %dt
      %strong Creator
    %dd= @gallery.user.name if @gallery.user

    %dt
      %strong Name
    %dd
      = @gallery.name

    %dt
      %strong Address
    %dd
      = simple_format @gallery.address

    %dt
      %strong Archived
    %dd= simple_check @gallery.archived

  %h2
    Upload New Photos
    = surround "(", ")" do
      %span#photo-count= @gallery.gallery_photos.count
    %small Drag images into box below to upload.


  #filedrag{ data: { object: "dropfile", project: @project.to_param, gallery: @gallery.to_param } }

  #gallery-photos
    = render "gallery_photos/photos", gallery: @gallery
