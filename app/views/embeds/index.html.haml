- @title = "Embeds"

- content_for :container_class, "container-fluid"
- content_for :sidebar, render("projects/sidebar")

- content_for :header do
  .float-right
    - if @project.editable_by?(current_user)
      = link_to "New Embed", new_project_embed_path(@project), class: "btn btn-sm btn-light"
  = link_to @project.name, @project
  |
  = @title

.dashboard-container
  %table.table.table-striped.table-borderless
    %col
    %col
    %col.d-none.d-sm-table-column
    %col
    - if @project.editable_by?(current_user)
      %col{ width: "1px" }
    %thead
      %tr
        %th Category
        %th Embed
        %th.d-none.d-sm-table-cell Creator
        %th.center Archived
        - if @project.editable_by?(current_user)
          %th Actions

    %tbody
      - if @embeds.count == 0
        %tr
          %td{ colspan: "6" }
            .text-center.text-muted
              No embeds currently exist for this project. You may
              = link_to "add a new embed", new_project_embed_path(@project)
              for this project.
      - else
        - @embeds.each do |embed|
          %tr{ id: "embed-#{embed.id}-container" }
            = render "embeds/embed_row", embed: embed
