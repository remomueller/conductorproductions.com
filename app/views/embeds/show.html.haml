- @title = @embed.name

- content_for :container_class, "container-fluid"
- content_for :sidebar, render("projects/sidebar")

- content_for :header do
  - if @project.editable_by?(current_user)
    .float-right
      = render "layouts/edit_delete_dropdown_header", edit_url: edit_project_embed_path(@project, @embed), delete_url: [@project, @embed], delete_confirmation: "Delete #{@embed.name}?"
  = link_to @project.name, @project
  |
  = link_to "Embeds", project_embeds_path(@project)
  |
  = @title

.dashboard-container
  %dl.dl-horizontal
    %dt
      %strong Category
    %dd= link_to @embed.category.name, [@project, @embed.category] if @embed.category

    %dt
      %strong Creator
    %dd= @embed.user.name if @embed.user

    %dt
      %strong Embed
    %dd
      = @embed.name
      %pre
        = @embed.embed_url

    %dt
      %strong Archived
    %dd= simple_check @embed.archived
