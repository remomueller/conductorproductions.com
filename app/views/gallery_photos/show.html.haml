%h1
  = link_to @project.name, @project
  |
  = link_to 'Galleries', project_galleries_path(@project)
  |
  = link_to @gallery.name, [@project, @gallery]

- if @project.editable_by?(current_user)
  =# link_to 'Edit Gallery', edit_project_gallery_path(@project, @gallery), class: 'btn btn-xs btn-default'
  = link_to 'Delete Gallery Photo', [@project, @gallery, @gallery_photo], method: :delete, class: 'btn btn-xs btn-danger', data: { confirm: "Are you sure you want to delete gallery photo?" }

= image_tag(download_project_gallery_gallery_photo_path(@project, @gallery, @gallery_photo), class: 'img-responsive')
