%h1 CLIENT LOGIN

- resource = User.new
- resource_name = :user

.row
  .col-sm-6.col-md-4
    = form_for resource, as: resource_name, url: session_path(resource_name), html: { class: 'form-vertical' } do |f|
      .form-group
        = f.label :email, 'Username', class: 'control-label'
        = f.text_field :email, autofocus: true, class: 'form-control'

      .form-group
        = f.label :password, nil, class: 'control-label'
        = f.password_field :password, autocomplete: 'off', class: 'form-control'

      = submit_tag 'SUBMIT', class: 'btn btn-default'
